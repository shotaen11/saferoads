<% visiter = notification.visiter %>
<% visited = notification.visited %>

<div class="col-md-10 mx-auto">
  <div class="form-inline">
    <span>
      <%= link_to user_path(visiter) do %>
        <!-- <%= attachment_image_tag visiter, :profile_image, fallback: "no_image.svg", class: "mt-3 profile-img" %> -->
        <strong><%= visiter.name %></strong>
      <% end %>
      さんが
    </span>

    <% case notification.action %>
      <% when 'follow' %>
        <%= "あなたをフォローしました" %>
      <% when 'favorite' %>
        <%= link_to notification.road_condition.road_name, notification.road_condition, style: "font-weight: bold;" %>
        <%= "を確認しました" %>
      <% when 'comment' %>
        <% if notification.road_condition.user_id == visited.id %>
          <%= link_to notification.road_condition.road_name, notification.road_condition, style: "font-weight: bold;" %>
        <% else %>
          <span>
            <%= link_to road_condition_path(notification.road_condition) do %>
              <%= image_tag avatar_url(notification.road_condition.user).to_s, class: "icon_mini" %>
              <strong><%= notification.road_condition.user.name + 'さんの報告' %></strong>
            <% end %>
          </span>
        <% end %>
        <%= "にコメントしました" %>
    <% end %>

    <p class="text-muted mb-0">
      <%= Comment.find_by(id: notification.comment_id)&.comment %>
    </p>
  </div>

  <div class="small text-muted  text-end">
    <%= time_ago_in_words(notification.created_at).upcase %>前
  </div>
  <hr>
</div>
