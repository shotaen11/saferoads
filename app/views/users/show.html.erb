<div class="cover-user-show">
  <div class="container d-flex flex-column align-items-center">
    <div class="row mt-5">
      <% if user_signed_in? && @user == current_user %>
       <h1 class="font-weight-normal">マイページ</h1>
      <% else %>
       <h1 class="font-weight-normal"><%= @user.name %>さんのページ</h1>
      <% end %>
    </div>
    <div class="row mt-5 index-left w-100">
      <% @road_conditions.each do |road_condition| %>
      <div class="one-post col-sm-3 mb-3">
        <%= link_to road_condition_path(road_condition) do %>
         <%= attachment_image_tag road_condition, :image, format: 'jpeg', size: '200x133' %>
         <p class="caption mb-0"><%= road_condition.road_name %></p>
         <p class="caption"><%= "#{road_condition.comments.count} コメント" %></p>
        <% end %>
      </div>
      <% end %>
    </div>
    <%= paginate @road_conditions %>
  </div>
</div>