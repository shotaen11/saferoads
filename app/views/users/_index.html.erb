<div class="row mt-2 mb-3 w-70">
<% users.each do |user| %>
<div class="one-post card mt-3">
  <%= link_to user_path(user) do %>
  <div class="d-flex">
    <%= attachment_image_tag user, :profile_image, size: '50x50', fallback: "no_image.svg", class: "mt-3 profile-img" %>
    <p class="caption h4 mt-4"><%= user.name %></p>
  </div>
  <!-- 下書き投稿を除く投稿件数を表示(スコープを使用) -->
  <p class="caption"><%= "#{user.road_conditions.merge(RoadCondition.published_only).count} 投稿" %></p>
  <% end %>
</div>
<% end %>
</div>
<%= paginate users %>